@using PracaDyplomowa.Models
@model List<Products>
@{ ViewData["Title"] = "Koszyk"; }
<br />

<div class="container">
    <h1 class="text-center">Twój koszyk</h1>
    <br />
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Zdjęcie</th>
                <th class="text-center">Nazwa</th>
                <th class="text-center">Kategoria</th>
                <th class="text-center">Cena</th>
                <th class="text-center">Usuń z koszyka</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
    <tr>
        <td>
            <img src="~/@item.Image" width="200px" height="150px" />
        </td>
        <td>@item.Name</td>
        <td>@item.Category</td>
        <td>@item.Price</td>

        <td align="center">
            <a asp-action="Remove" class="btn btn-danger" asp-route-id="@item.Id">
                Usuń
            </a>
        </td>
    </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-6">
            <a asp-action="AllProducts" asp-controller="Home" class="btn btn-info">Wróć do przeglądania produktów</a>
        </div>
        <div class="col-6 text-right">
            <h3>Całkowity koszt : @Model.Sum(x => x.Price) zł </h3>
            <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-success">Przejdź do zamówienia</a>
        </div>
    </div>
</div>
