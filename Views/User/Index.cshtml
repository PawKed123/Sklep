@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Lista użytkowników";
}
<br />

<div class="container">
    <h2 class="font-weight-bold" style="text-align: center">Lista użytkowników</h2>
    <br>
    <table class="table table-striped ">
        <thead class="thead-dark">
            <tr>

                <th scope="col" class="text-center">E-mail</th>
                <th scope="col" class="text-center">Numer telefonu</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="text-center" style="font-size: 18px ">@user.UserName</td>
                    <td class="text-center" style="font-size: 18px ">@user.PhoneNumber</td>
                    <td style="text-align:center">
                        @if (@user.UserName == "Admin@gmail.com")
                        {
                            <p class="font-weight-bold" style="color: green; text-align: center;">Admin</p>
                        }
                        else
                        {
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">

                                <button type="submit" class="btn btn-danger mr-1 "
                                        onclick="return confirm('Jesteś pewny że chcesz usunąć konto użytkownika : @user.UserName')">
                                    Usuń użytkownika
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>