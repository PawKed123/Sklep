@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";

}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1>@ViewData["Title"]</h1>
            <section>
                <form id="account" method="post">

                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-bold" asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Zaloguj się </button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Jeśli nie masz konta, zarejestruj się</a>
                        </p>

                    </div>
                </form>
            </section>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
